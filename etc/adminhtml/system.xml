<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- Add new Tab -->
        <tab id="sbzimport" translate="label" sortOrder="15">
            <label>Buchzentrum import</label>
        </tab>
        <section id="settingSbzImport" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Setting</label>
            <tab>sbzimport</tab>
            <!-- resource tag name which we have to defined in the acl.xml -->
            <resource>Funk_SbzImport::config_sbzimport</resource>
            <group id="authentication" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Authentication</label>
                <field id="username" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Username</label>
                </field>
                <field id="password" translate="label" type="text" sortOrder="2" showInDefault="2" showInWebsite="2"
                       showInStore="2">
                    <label>Password</label>
                </field>
                <field id="updatestock" translate="label" type="checkbox" sortOrder="3" showInDefault="3"
                       showInWebsite="3" showInStore="3">
                    <label>Update stock</label>
                </field>
            </group>

            <group id="category" translate="label" type="text" sortOrder="2" showInDefault="2" showInWebsite="2"
                   showInStore="2">
                <label>Categories</label>
                <field id="default_category" translate="label comment" type="select" sortOrder="4" showInDefault="4"
                       showInWebsite="4" showInStore="4">
                    <label>Buchzentrum products default category</label>
                    <source_model>Funk\SbzImport\Model\Config\Category\Categories</source_model>
                </field>
                <field id="ebooks_dvds_cds_category" translate="label comment" type="select" sortOrder="5"
                       showInDefault="5" showInWebsite="5" showInStore="5">
                    <label>E-Books, DVDS, CDS category</label>
                    <source_model>Funk\SbzImport\Model\Config\Category\Categories</source_model>
                </field>
                <field id="ebooks_category" translate="label comment" type="select" sortOrder="6" showInDefault="6"
                       showInWebsite="6" showInStore="6">
                    <label>E-Books category</label>
                    <source_model>Funk\SbzImport\Model\Config\Category\Categories</source_model>
                </field>
            </group>
        </section>
    </system>
</config>